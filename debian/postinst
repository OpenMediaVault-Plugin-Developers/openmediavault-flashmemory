#!/bin/sh

set -e

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

case "$1" in
    configure)
        SERVICE_XPATH_NAME="flashmemory"
        SERVICE_XPATH="/config/services/${SERVICE_XPATH_NAME}"

        # find root device and save for displaying write totals
        for device in $(blkid -o device); do
            [ "$(stat --format '%04D' /)" = "$(stat --format '%02t%02T' $device)" ] && root="$device" && break
        done

        # Add the default configuration
        if ! omv_config_exists "${SERVICE_XPATH}"; then
            omv_config_add_element "/config/services" "${SERVICE_XPATH_NAME}"
            omv_config_add_element "${SERVICE_XPATH}" "enable" "0" 
        fi

        if ! omv_config_exists "${SERVICE_XPATH}/root"; then
            omv_config_add_element "${SERVICE_XPATH}" "root" "${root}" 
        fi
        
        #if there already a config file it means folder2ram was already running so it needs a refresh.
        if [ -f /etc/folder2ram/folder2ram.conf ]; then
        folder2ram -refresh ;
        fi
        

        # Activate package triggers. These triggers are only set during the
        # package installation.
        dpkg-trigger update-fixperms
        dpkg-trigger update-locale
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument" >&2
        exit 1
    ;;
esac

exit 0
